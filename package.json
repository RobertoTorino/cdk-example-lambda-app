{
  "name": "cdk-example-app",
  "version": "0.1.0",
  "bin": {
    "cdk-example-app": "bin/cdk-example-lambda-app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "purge jest cache": "npx jest --clearCache",
    "purge cdk.out": "rm -rvf cdk.out",
    "purge modules": "rm -rvf node_modules",
    "purge lockfile": "rm package-lock.json",
    "purge cache": "npm cache clean -f"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.12.7",
    "aws-cdk": "2.149.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "aws-cdk-lib": "2.149.0",
    "constructs": "^10.0.0"
  },
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=20.0.0"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-results",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "audit-level": "critical",
  "lint-staged": {
    "**/*.ts": [
      "npm run test"
    ]
  }
}
